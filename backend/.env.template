# TrackAppointments Attribution Tracker - Environment Configuration Template
# Copy this file to .env and fill in your actual values

# ===== DATABASE CONFIGURATION =====
# For development (SQLite)
DATABASE_URL=sqlite:///./booking_attribution_tracker.db

# For production (PostgreSQL - use actual connection string)
# DATABASE_URL=postgresql://user:password@localhost:5432/trackappointments

# Redis for caching and session management
REDIS_URL=redis://localhost:6379/0

# ===== SECURITY CONFIGURATION =====
# Generate secure keys for production:
# python -c "import secrets; print(secrets.token_urlsafe(32))"
SECRET_KEY=dev-only-secret-key-not-for-production
HASH_SALT=dev-only-hash-salt-not-for-production

# Token expiration times
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=30

# Security features
ENABLE_CSRF_PROTECTION=true
ENABLE_SECURITY_HEADERS=true

# ===== ENVIRONMENT SETTINGS =====
ENVIRONMENT=development
LOG_LEVEL=INFO

# ===== CORS CONFIGURATION =====
# Add your domain(s) for production
CORS_ORIGINS=http://localhost:3000,http://localhost:3002,https://trackappointments.com,https://www.trackappointments.com

# ===== OAUTH PROVIDERS CONFIGURATION =====
# Follow the OAuth setup guides in the docs/ directory

# Facebook OAuth (for Facebook Ads integration)
# Get from: https://developers.facebook.com/apps/
FACEBOOK_CLIENT_ID=your_facebook_app_id_here
FACEBOOK_CLIENT_SECRET=your_facebook_app_secret_here

# Google OAuth (for Google Ads integration)
# Get from: https://console.developers.google.com/
GOOGLE_CLIENT_ID=your_google_oauth_client_id_here.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your_google_oauth_client_secret_here

# Square OAuth (for Square payments/appointments integration)
# Get from: https://developer.squareup.com/apps
SQUARE_CLIENT_ID=your_square_application_id_here
SQUARE_CLIENT_SECRET=your_square_application_secret_here

# Stripe OAuth (for Stripe payments integration)
# Get from: https://dashboard.stripe.com/account/applications
STRIPE_CLIENT_ID=ca_your_stripe_client_id_here
STRIPE_CLIENT_SECRET=sk_test_your_stripe_secret_key_here

# ===== REAL DATA INTEGRATION TOKENS =====
# These are obtained after OAuth flows complete
# Leave empty initially - they'll be populated after OAuth connections
FACEBOOK_ACCESS_TOKEN=
GOOGLE_ACCESS_TOKEN=
SQUARE_ACCESS_TOKEN=
STRIPE_ACCESS_TOKEN=

# ===== LEGACY INTEGRATIONS (optional) =====
# Square direct integration (alternative to OAuth)
SQUARE_APPLICATION_ID=
SQUARE_ACCESS_TOKEN=
SQUARE_WEBHOOK_SIGNATURE_KEY=

# Google Ads API (alternative to OAuth)
GOOGLE_ADS_DEVELOPER_TOKEN=
GOOGLE_ADS_CLIENT_ID=
GOOGLE_ADS_CLIENT_SECRET=
GOOGLE_ADS_REFRESH_TOKEN=

# ===== COMMUNICATION SERVICES =====
# SendGrid for email notifications
# Get from: https://app.sendgrid.com/settings/api_keys
SENDGRID_API_KEY=SG.your_sendgrid_api_key_here
SENDGRID_FROM_EMAIL=noreply@trackappointments.com

# Twilio for SMS notifications (optional)
# Get from: https://console.twilio.com/
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=

# ===== MONITORING & ANALYTICS =====
# Sentry for error tracking (optional)
# Get from: https://sentry.io/settings/projects/
SENTRY_DSN=

# ===== JWT CONFIGURATION =====
# Path to JWT keys (created by generate-production-secrets.sh)
JWT_PRIVATE_KEY_PATH=./keys/jwt_private_key.pem
JWT_PUBLIC_KEY_PATH=./keys/jwt_public_key.pem

# ===== PRODUCTION OVERRIDES =====
# These will be different in production
# ENVIRONMENT=production
# LOG_LEVEL=WARNING
# ENABLE_CSRF_PROTECTION=true
# ENABLE_SECURITY_HEADERS=true