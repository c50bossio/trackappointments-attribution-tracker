    <script>
        // Page navigation functionality
        function showPage(pageId) {
            // Hide all pages
            document.querySelectorAll('.page-content').forEach(page => {
                page.classList.add('hidden');
            });
            
            // Remove active state from all nav items
            document.querySelectorAll('.nav-item').forEach(item => {
                item.classList.remove('active');
            });
            
            // Show selected page
            document.getElementById('page-' + pageId).classList.remove('hidden');
            document.getElementById('page-' + pageId).classList.add('fade-in');
            
            // Add active state to clicked nav item
            document.getElementById('nav-' + pageId).classList.add('active');
        }

        // Initialize with dashboard page
        showPage('dashboard');

        // Simulate real-time data updates
        function updateMetrics() {
            const revenue = document.getElementById('monthly-revenue');
            const bookings = document.getElementById('weekly-bookings');
            
            if (revenue) {
                const currentRevenue = parseInt(revenue.textContent.replace('$', '').replace(',', ''));
                revenue.textContent = '$' + (currentRevenue + Math.floor(Math.random() * 100)).toLocaleString();
            }
            
            if (bookings) {
                const currentBookings = parseInt(bookings.textContent);
                bookings.textContent = currentBookings + Math.floor(Math.random() * 3);
            }
        }

        // Update metrics every 30 seconds
        setInterval(updateMetrics, 30000);

        // Integration management functions
        async function loadIntegrationStatus() {
            try {
                const response = await fetch('https://api.bookingtracker.app/api/v1/integrations/status');
                const data = await response.json();
                
                if (data.success) {
                    displayIntegrationCards(data.data);
                    updateSetupGuide(data.data);
                } else {
                    console.error('Failed to load integration status');
                }
            } catch (error) {
                console.error('Error loading integration status:', error);
                // Show default cards with setup required status
                displayIntegrationCards({
                    facebook_ads: { configured: false, status: "setup_required", description: "Facebook Ads API for conversion tracking" },
                    square_booking: { configured: false, status: "setup_required", description: "Square Bookings API for appointment data" },
                    google_ads: { configured: false, status: "setup_required", description: "Google Ads API for search attribution" }
                });
            }
        }

        function displayIntegrationCards(integrations) {
            const cardsContainer = document.getElementById('integration-cards');
            const loadingContainer = document.getElementById('integration-loading');
            
            // Hide loading, show cards
            loadingContainer.classList.add('hidden');
            cardsContainer.classList.remove('hidden');
            
            // Clear existing cards
            cardsContainer.innerHTML = '';
            
            // Integration display configuration
            const integrationConfig = {
                facebook_ads: { name: 'Facebook Ads', icon: 'üì±', action: 'Manage Integration' },
                square_booking: { name: 'Square', icon: 'üè™', action: 'Manage Integration' },
                google_ads: { name: 'Google Ads', icon: 'üîç', action: 'Connect Now' }
            };
            
            // Create cards for each integration
            Object.entries(integrations).forEach(([key, integration]) => {
                const config = integrationConfig[key];
                if (!config) return;
                
                const statusClass = integration.configured ? 
                    'bg-green-100 text-green-800' : 
                    'bg-yellow-100 text-yellow-800';
                const statusText = integration.configured ? 'Connected' : 'Setup Required';
                const buttonClass = integration.configured ? 
                    'bg-blue-600 hover:bg-blue-700' : 
                    'bg-gray-600 hover:bg-gray-700';
                
                const card = document.createElement('div');
                card.className = 'bg-white rounded-xl shadow-lg p-6';
                card.innerHTML = `
                    <div class="flex items-center justify-between mb-4">
                        <div class="flex items-center space-x-3">
                            <span class="text-2xl">${config.icon}</span>
                            <h3 class="font-semibold text-gray-900">${config.name}</h3>
                        </div>
                        <span class="${statusClass} text-xs font-medium px-2 py-1 rounded-full">${statusText}</span>
                    </div>
                    <p class="text-sm text-gray-600 mb-4">${integration.description}</p>
                    <button class="w-full ${buttonClass} text-white py-2 rounded-lg" onclick="manageIntegration('${key}', ${integration.configured})">
                        ${config.action}
                    </button>
                `;
                cardsContainer.appendChild(card);
            });
        }

        function updateSetupGuide(integrations) {
            const setupGuide = document.getElementById('setup-guide');
            const totalIntegrations = Object.keys(integrations).length;
            const configuredIntegrations = Object.values(integrations).filter(i => i.configured).length;
            
            // Show setup guide if not all integrations are configured
            if (configuredIntegrations < totalIntegrations) {
                setupGuide.classList.remove('hidden');
            } else {
                setupGuide.classList.add('hidden');
            }
        }

        function manageIntegration(integrationKey, isConfigured) {
            if (isConfigured) {
                alert(`${integrationKey} is connected and working properly!`);
            } else {
                showSetupGuide(integrationKey);
            }
        }

        async function showSetupGuide(specificIntegration = null) {
            try {
                const response = await fetch('https://api.bookingtracker.app/api/v1/integrations/setup-guide');
                const data = await response.json();
                
                if (data.success) {
                    displaySetupModal(data.data, specificIntegration);
                }
            } catch (error) {
                console.error('Error loading setup guide:', error);
                alert('Unable to load setup guide. Please check the backend connection.');
            }
        }

        function displaySetupModal(setupData, specificIntegration) {
            // For now, show a simple alert with setup information
            const integrations = specificIntegration ? 
                { [specificIntegration]: setupData[specificIntegration] } : 
                setupData;
            
            let message = 'Setup Instructions:\n\n';
            Object.entries(integrations).forEach(([key, config]) => {
                if (config && config.setup_steps) {
                    message += `${key.toUpperCase()}:\n`;
                    config.setup_steps.forEach(step => {
                        message += `${step}\n`;
                    });
                    message += `\nDocumentation: ${config.documentation_url}\n\n`;
                }
            });
            
            message += `\nQuick Setup: Run "${setupData.quick_setup?.command}" in your terminal`;
            alert(message);
        }

        // Load integration status when integrations page is shown
        function showPage(pageId) {
            // Hide all pages
            document.querySelectorAll('.page-content').forEach(page => {
                page.classList.add('hidden');
            });
            
            // Remove active state from all nav items
            document.querySelectorAll('.nav-item').forEach(item => {
                item.classList.remove('active');
            });
            
            // Show selected page
            document.getElementById('page-' + pageId).classList.remove('hidden');
            document.getElementById('page-' + pageId).classList.add('fade-in');
            
            // Add active state to clicked nav item
            document.getElementById('nav-' + pageId).classList.add('active');
            
            // Load integration data when integrations page is shown
            if (pageId === 'integrations') {
                loadIntegrationStatus();
            }
        }
    </script>
